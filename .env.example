# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Application Environment
JULIA_ENV=production
APP_ENV=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=warn

# Security
SECRET_KEY=your_secret_key_here_change_in_production
SECURE_COOKIES=true
HTTPONLY_COOKIES=true
SAMESITE=Lax

# CORS Configuration (set to your domain in production)
CORS_ORIGIN=https://yourdomain.com

# If using a database in the future
# DATABASE_URL=postgresql://user:password@localhost:5432/si_model
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=si_model

# Authentication (if you add auth later)
# AUTH_ENABLED=false
# JWT_SECRET=your_jwt_secret_here
